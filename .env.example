# Copy this file to .env and fill in your values

# Authentication
# Generate AUTH_SECRET with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here
AUTH_URL=http://localhost:5173

# OAuth Credentials
# Format: provider:clientId:clientSecret (multiple providers separated by |)
# Example: github:your_github_client_id:your_github_client_secret
OAUTH_CREDENTIALS=

# Sentry (Optional - for error tracking)
# Leave empty to disable Sentry
PUBLIC_SENTRY_DSN=

# Discord Webhook (Optional - for notifications)
# Leave empty to use console logging instead
DISCORD_WEBHOOK_URL=

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456
POSTGRES_DATABASE=easy_rd

DATABASE_URL=postgres://postgres:123456@127.0.0.1:5432/easy_rd